    MDLabel:
        text: "Be Strong"
        theme_text_color: "Custom"
        text_color: "white"
        font_size:30
        font_name: "Lato-Bold.ttf"
        pos_hint: {'center_x': 0.7, 'center_y':0.2}
    MDLabel:
        text: "Be Healthy"
        theme_text_color: "Custom"
