MDScreen:
    name:"date"
    MDFloatLayout:
        md_bg_color: (33/255, 150/255, 243/255, 1)
        MDRaisedButton:
            text:"Calendar"
            pos_hint: {'center_x': 0.5, 'center_y':0.5}
            on_release:app.show_date_picker()
        MDLabel:
            id: date
            theme_text_color: "Custom"
            text_color: "white"
            text_font: 20
            text: ""
            pos_hint: {'center_x': 0.87, 'center_y':0.8}
        MDLabel:
            id: date_food
            theme_text_color: "Custom"
            text_color: "white"
            text: ""
            pos_hint: {'center_x': 0.5, 'center_y':0.4}
        MDLabel:
            id: date_calories
            theme_text_color: "Custom"
            text_color: "white"
            text: ""
            pos_hint: {'center_x': 0.5, 'center_y':0.3}
        MDLabel:
            id: push_up
            theme_text_color: "Custom"
            text_color: "white"
            text: ""
            pos_hint: {'center_x': 0.5, 'center_y':0.2}
        MDFillRoundFlatButton:
            text: "Go back <<<"
            text_color: "white"
            font_size: 30
            font_name: "Roboto"
            size_hint:(0.3, 0.1)
            pos_hint: {'center_x': 0.5, 'center_y':0.1}
            md_bg_color: (33/255, 150/255, 243/255, 1)
            on_press:
                root.manager.transition.direction = "right"
                root.manager.current = "main_menu"
