MDScreen:
    water: 0
    name:"stats"
    MDFloatLayout:
        md_bg_color: (33/255, 150/255, 243/255, 1)
        Label:
            id: message
            text: "Add water"
            pos_hint: {'center_x': 0.5, 'center_y':0.8}
        Label:
            id:counter_water
            text: f"{root.water}/8"
            pos_hint: {'center_x': 0.5, 'center_y':0.7}
        Image:
            source: "glass.png"
            size_hint: 0.2, 0.2
            pos_hint: {'center_x': 0.5, 'center_y':0.6}
        MDFloatingActionButton:
            icon: 'plus'
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            md_bg_color: (33/255, 150/255, 243/255, 1)
            on_press: root.water += 1 if root.water < 8 else root.water == 7